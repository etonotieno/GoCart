<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GoCart" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/go_cart_avocado</item>
        <item name="colorPrimaryVariant">@color/go_cart_avocado_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/go_cart_sinopia</item>
        <item name="colorSecondaryVariant">@color/go_cart_sinopia_dark</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="fontFamily">@font/work_sans</item>
        <item name="android:fontFamily">@font/work_sans</item>

        <!-- System bar attributes -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@color/white</item>

        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <item name="android:navigationBarColor">@color/white</item>
    </style>

    <style name="Theme.GoCart.SplashScreen" parent="Theme.SplashScreen">
        <!-- System bar attributes -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>

        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <item name="android:navigationBarColor">@color/white</item>

        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/bg_launcher</item>

        <!-- Set the theme of the Activity that directly follows the splash screen. -->
        <item name="postSplashScreenTheme">@style/Theme.GoCart</item>
    </style>
</resources>